<div class="page-header">
  <%= link_to new_township_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Township
  <% end %>
  <h1>Listing townships</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @townships) do |township| %>
            <td><%= township.id %></td>
            <td><%= township.description %></td>
            <td><%= link_to 'Show', township %></td>
        <td><%= link_to 'Edit', edit_township_path(township) %></td>
        <td><%= link_to 'Destroy', township, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
