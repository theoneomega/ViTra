<%= form_for(@drug, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @drug.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@drug.errors.count, "error") %> prohibited this drug from being saved:</h4>

      <ul>
      <% @drug.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
