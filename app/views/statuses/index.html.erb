<div class="page-header">
  <%= link_to new_status_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Status
  <% end %>
  <h1>Listing statuses</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Description</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @statuses) do |status| %>
            <td><%= status.id %></td>
            <td><%= status.description %></td>
            <td><%= link_to  status, :class => "label label-default" do %>
                  <span class="glyphicon glyphicon-eye-open"></span> Mostrar
                <% end %>
              <%= link_to edit_status_path(status), :class => "label label-info" do%>
              <span class="glyphicon glyphicon-pencil"></span> Editar
              <% end %>
      <%= link_to status, method: :delete, data: { confirm: 'Are you sure?' } , :class => "label label-danger" do %>
            <span class="glyphicon glyphicon-trash"></span> Eliminar
            <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
