<div class="panel panel-info">
  <div class="panel-heading"> Multimedia</div>
  <div class="panel-body">

    <div class="form-group">
      <%= f.label :kind, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :kind, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :quantity, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :quantity, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => "form-control" %>
      </div>
    </div>
    <%=f.link_to_remove '<i class="glyphicon glyphicon-trash">  Remover</i>'.html_safe,:class => 'btn btn-danger'%>

  </div>
</div>