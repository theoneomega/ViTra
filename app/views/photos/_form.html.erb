<%= form_for(@photo, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @photo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h4>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_file_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image_file_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_content_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image_content_type, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_file_size, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :image_file_size, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_updated_at, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :image_updated_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :person_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :person_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
