<div class="page-header">
  <%= link_to new_patrol_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Patrol
  <% end %>
  <h1>Listing patrols</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @patrols) do |patrol| %>
            <td><%= patrol.id %></td>
            <td><%= patrol.description %></td>
            <td><%= link_to 'Show', patrol %></td>
        <td><%= link_to 'Edit', edit_patrol_path(patrol) %></td>
        <td><%= link_to 'Destroy', patrol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
